{
  "name": "pm-demo-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd client && vite",
    "server": "cd server && npm run server",
    "build": "cd client && vite build",
    "preview": "cd client && vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "start:all": "concurrently \"npm run dev\" \"npm run server\"",
    "app": "concurrently \"npm run dev\" \"npm run server\""
  },
  "dependencies": {
    "concurrently": "^9.2.0"
  }
}
