{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Teams Management",
  "version": "1.0.0",
  "identifier": "com.teams-management.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Teams Management",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null 
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["com.teams-management.dev"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJBQzdCNTVFRTg5OTFERQpSV1Rla1ludVZYdXNBaFdVd2hlMEdoVUJEZDFGak14NHQ1NzhPblpDb01EWkhhcU4xaXRHeWpSYQo=",
      "endpoints": [
        "https://gist.github.com/caphefalumi/bc9581882d84c80e16d9606edf575d71"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": ["nsis", "dmg", "deb", "appimage", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
